<form asp-action="Add" asp-controller="AddPayements"  method="post">
    Inserisci nuovo pagamento:
  
    <div>
        Codice Fiscale:<input type="text" name="Codfiscale" />
    </div>
    <div>
        Periodo pagamento:
        Inizio:<input type="date" name="Datainizio" />
        Fine:<input type="date" name="Datafine" />
    </div>
    <div>
        Ammontare pagamento:<input type="text" name="Pagamento" />
    </div>
    <div>
        Tipo pagamento: Stipendio<input name="coniugato" type="radio" value="Stipendio" />
        Acconto:<input type="radio" name="coniugato" value="Acconto" />
    </div>
    <button>Aggiungi Pagamento</button>
    

</form>

<ul>
    @{
        foreach (Pagamenti pagamento in Model)
        {
            <li>
                cfiscale: @pagamento.Cfiscale, Datainizio: @pagamento.Datainizio, Datafine:@pagamento.Datafine, Valore:@pagamento.Pagamento;
            </li>
        }
    }
</ul>